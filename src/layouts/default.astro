---
import Metadata from '../components/metadata.astro'
import Logo from '../components/logo.astro'
import PlantData from '../components/plant-data.astro'
import Footer from '../components/plant-footer.astro'

const { content } = Astro.props
const baseUrl = import.meta.env.PUBLIC_BASE_URL
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<Metadata/>
		<title>{content.name} | Spotted</title>
	</head>
	<body>
		<div class="logo">
			<Logo/>
		</div>
		<article>
			<picture>
				<source type="image/avif" srcset={`${baseUrl}/images/${content.image}.avif`}/>
				<source type="image/webp" srcset={`${baseUrl}/images/${content.image}.webp`}/>
				<img
					src={`${baseUrl}/images/${content.image}.png`}
					alt={`Watercolor illustration of a ${content.name}`}
				/>
			</picture>
			<h1>{content.name}</h1>
			<p class="latin-name">{content['latin-name']}</p>
			<PlantData data={content}/>
			<section class="content">
				<slot/>
			</section>
			<Footer/>
		</article>
	</body>
</html>

<style>
	.logo
	{
		padding: 30px;
	}

	article
	{
		padding: 0 15px;
	}

	img
	{
		max-width: 350px;
		height: 350px;
		object-fit: contain;
		mix-blend-mode: multiply;
		-webkit-user-select: none;
		user-select: none;

		display: block;
		margin: 20px auto;
	}

	h1
	{
		font-family: var(--font);
		font-weight: normal;
		font-style: italic;
		font-size: 3rem;
		letter-spacing: -0.05em;
		word-spacing: 0.1em;
		text-align: center;
		margin: 10px;
	}

	.latin-name
	{
		color: hsl(var(--green) / 1);
		font-family: Helvetica, sans-serif;
		font-size: 1.2rem;
		text-align: center;
		text-transform: uppercase;
		letter-spacing: 0.02em;
		transform: scaleY(0.75);
		margin: 0;
	}

	section.content :global(p)
	{
		font-family: var(--font);
		font-size: 1.2rem;
		line-height: 1.6;

		max-width: 65ch;
		margin: 3rem auto;
		text-align: justify;
	}
</style>